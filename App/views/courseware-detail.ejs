<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - 教育课件平台</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-graduation-cap me-2"></i>教育课件平台
            </a>
            
            <div class="navbar-nav ms-auto">
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.username %>
                            <% if (user.is_premium) { %>
                                <span class="badge bg-warning ms-1">VIP</span>
                            <% } %>
                        </a>
                        <ul class="dropdown-menu">
                            <% if (!user.is_premium) { %>
                                <li><a class="dropdown-item" href="/upgrade">
                                    <i class="fas fa-crown me-2"></i>升级VIP
                                </a></li>
                            <% } %>
                            <li><a class="dropdown-item" href="#" onclick="logout()">
                                <i class="fas fa-sign-out-alt me-2"></i>退出登录
                            </a></li>
                        </ul>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-book-open me-2"></i><%= courseware.title %>
                        </h4>
                        <div>
                            <button class="btn btn-light btn-sm me-2" onclick="refreshCourseware()" title="刷新课件">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                            <span class="badge bg-light text-dark"><%= courseware.category %></span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <!-- 课件内容区域 -->
                    <iframe 
                        src="/courseware/<%= courseware.id %>/content?t=<%= Date.now() %>" 
                        width="100%" 
                        height="600" 
                        frameborder="0"
                        class="w-100"
                        style="min-height: 600px;">
                    </iframe>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- 课件信息 -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">课件信息</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>标题：</strong><%= courseware.title %>
                    </div>
                    <div class="mb-3">
                        <strong>分类：</strong>
                        <span class="badge bg-primary"><%= courseware.category %></span>
                    </div>
                    <div class="mb-3">
                        <strong>类型：</strong>
                        <% if (courseware.is_free) { %>
                            <span class="badge bg-success">
                                <i class="fas fa-gift me-1"></i>免费课件
                            </span>
                        <% } else { %>
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-crown me-1"></i>VIP课件
                            </span>
                        <% } %>
                    </div>
                    <div class="mb-3">
                        <strong>描述：</strong>
                        <p class="text-muted mt-2"><%= courseware.description %></p>
                    </div>
                    <div class="mb-3">
                        <strong>创建时间：</strong>
                        <small class="text-muted">
                            <%= new Date(courseware.created_at).toLocaleDateString('zh-CN') %>
                        </small>
                    </div>
                </div>
            </div>

            <!-- 学习进度 -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">学习进度</h5>
                </div>
                <div class="card-body">
                    <div class="progress mb-3">
                        <div class="progress-bar" role="progressbar" style="width: 0%" id="learningProgress">
                            0%
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success btn-sm" onclick="markAsCompleted()">
                            <i class="fas fa-check me-1"></i>标记为已完成
                        </button>
                        <button class="btn btn-outline-primary btn-sm" onclick="addToFavorites()">
                            <i class="fas fa-star me-1"></i>收藏课件
                        </button>
                    </div>
                </div>
            </div>

            <!-- 相关课件推荐 -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">相关推荐</h5>
                </div>
                <div class="card-body">
                    <div class="small-courseware-list">
                        <!-- 这里可以添加相关课件的推荐 -->
                        <p class="text-muted">暂无相关课件推荐</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 返回按钮 -->
    <div class="row mt-4">
        <div class="col-12">
            <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>返回首页
            </a>
        </div>
    </div>
</div>

<script>
let progress = 0;

function markAsCompleted() {
    progress = 100;
    updateProgress();
    
    // 这里可以发送请求到后端记录学习进度
    fetch('/api/courseware/<%= courseware.id %>/complete', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('恭喜！您已完成本课件的学习');
        }
    })
    .catch(error => {
        console.error('标记完成失败:', error);
    });
}

function addToFavorites() {
    // 这里可以发送请求到后端添加收藏
    alert('课件已添加到收藏夹');
}

function updateProgress() {
    const progressBar = document.getElementById('learningProgress');
    progressBar.style.width = progress + '%';
    progressBar.textContent = progress + '%';
    
    if (progress === 100) {
        progressBar.classList.remove('bg-primary');
        progressBar.classList.add('bg-success');
    }
}

// 模拟学习进度更新
setInterval(() => {
    if (progress < 100) {
        progress += Math.random() * 2;
        if (progress > 100) progress = 100;
        updateProgress();
    }
}, 5000);

function refreshCourseware() {
    const iframe = document.querySelector('iframe');
    const currentSrc = iframe.src;
    // 添加时间戳强制刷新
    const newSrc = currentSrc.split('?')[0] + '?t=' + Date.now();
    iframe.src = newSrc;
}

function logout() {
    fetch('/api/auth/logout', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({})
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.href = '/login';
        }
    })
    .catch(error => {
        console.error('退出登录失败:', error);
    });
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 