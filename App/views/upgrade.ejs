<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - 教育课件平台</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-graduation-cap me-2"></i>教育课件平台
            </a>
            <div class="navbar-nav ms-auto">
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.username %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="logout()">
                                <i class="fas fa-sign-out-alt me-2"></i>退出登录
                            </a></li>
                        </ul>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <i class="fas fa-crown text-warning" style="font-size: 4rem;"></i>
                <h1 class="mt-3">升级VIP会员</h1>
                <p class="lead text-muted">解锁全部付费课件，享受更多学习资源</p>
            </div>

            <div class="row">
                <!-- 当前状态 -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-user me-2"></i>普通用户
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    查看免费课件
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-times text-danger me-2"></i>
                                    付费课件需单独购买
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-times text-danger me-2"></i>
                                    有限的学习资源
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-times text-danger me-2"></i>
                                    标准客服支持
                                </li>
                            </ul>
                            <div class="text-center mt-4">
                                <span class="h4 text-muted">当前状态</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- VIP权益 -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="fas fa-crown me-2"></i>VIP会员
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    查看所有免费课件
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    解锁全部付费课件
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    无限次观看学习
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    优先获得新课程
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    专属客服支持
                                </li>
                            </ul>
                            <div class="text-center mt-4">
                                <div class="price-display">
                                    <span class="h2 text-primary">¥99</span>
                                    <small class="text-muted">/永久</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 升级按钮 -->
            <div class="text-center mb-5">
                <button class="btn btn-warning btn-lg px-5 py-3" onclick="startUpgrade()">
                    <i class="fas fa-crown me-2"></i>立即升级VIP会员
                </button>
            </div>

            <!-- 常见问题 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">常见问题</h5>
                </div>
                <div class="card-body">
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq1">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1">
                                    VIP会员有什么特权？
                                </button>
                            </h2>
                            <div id="collapse1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    VIP会员可以无限制访问平台上的所有付费课件，享受专属客服支持，并优先获得新课程更新。
                                </div>
                            </div>
                        </div>
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq2">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2">
                                    支付安全吗？
                                </button>
                            </h2>
                            <div id="collapse2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    我们使用微信支付，所有交易都经过加密处理，确保您的支付信息安全。
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="faq3">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3">
                                    VIP会员是永久的吗？
                                </button>
                            </h2>
                            <div id="collapse3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    是的，一次性支付99元即可获得永久VIP会员资格，无需续费。
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- VIP升级模态框 -->
<div class="modal fade" id="upgradeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-crown text-warning me-2"></i>升级VIP会员
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <div class="mb-4">
                    <div class="price-display">
                        <span class="h2 text-primary">¥99</span>
                        <small class="text-muted">/永久会员</small>
                    </div>
                    <p class="text-muted">一次付费，终身享受所有VIP特权</p>
                </div>
                
                <div id="paymentQRSection" style="display: none;">
                    <p>请使用微信扫码支付：</p>
                    <img id="upgradePaymentQR" src="" alt="VIP升级支付二维码" class="img-fluid mb-3" style="max-width: 200px;">
                    <p class="small text-muted">支付完成后将自动升级为VIP用户</p>
                </div>
                
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" onclick="generateUpgradePayment()">
                        <i class="fas fa-qrcode me-2"></i>生成支付二维码
                    </button>
                    <hr>
                    <p class="small text-muted">测试环境快捷操作：</p>
                    <button class="btn btn-success btn-sm" onclick="simulateUpgradePayment()">
                        <i class="fas fa-magic me-1"></i>模拟支付成功
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function startUpgrade() {
    const modal = new bootstrap.Modal(document.getElementById('upgradeModal'));
    modal.show();
}

function generateUpgradePayment() {
    fetch('/api/payment/create', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ amount: 99 })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById('upgradePaymentQR').src = data.qrCode;
            document.getElementById('paymentQRSection').style.display = 'block';
        } else {
            alert('生成支付二维码失败');
        }
    })
    .catch(error => {
        console.error('生成支付失败:', error);
    });
}

function simulateUpgradePayment() {
    fetch('/api/payment/simulate-success', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({})
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('恭喜！VIP升级成功，即将跳转到首页...');
            setTimeout(() => {
                window.location.href = '/';
            }, 1000);
        } else {
            alert('升级失败: ' + data.message);
        }
    })
    .catch(error => {
        console.error('模拟支付失败:', error);
    });
}

function logout() {
    fetch('/api/auth/logout', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({})
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.href = '/login';
        }
    })
    .catch(error => {
        console.error('退出登录失败:', error);
    });
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 