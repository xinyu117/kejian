<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - 教育课件平台</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">
</head>
<body>

<div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-8 col-lg-6 col-xl-4">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-graduation-cap text-primary" style="font-size: 3rem;"></i>
                        <h3 class="mt-3">用户登录</h3>
                        <p class="text-muted">登录访问教育课件平台</p>
                    </div>

                    <!-- 用户名密码登录 -->
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">用户名</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">密码</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>登录
                        </button>
                    </form>

                    <div class="text-center mb-3">
                        <span class="text-muted">或</span>
                    </div>

                    <!-- 微信扫码登录 -->
                    <button class="btn btn-success w-100 mb-3" onclick="showWechatLogin()">
                        <i class="fab fa-weixin me-2"></i>微信扫码登录
                    </button>

                    <hr>

                    <div class="text-center">
                        <p class="mb-0">还没有账户？ <a href="/register" class="text-decoration-none">立即注册</a></p>
                    </div>

                    <!-- 测试账户提示 -->
                    <div class="alert alert-info mt-4" role="alert">
                        <strong>测试账户：</strong><br>
                        普通用户：user / user123<br>
                        VIP用户：admin / admin123
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 微信登录模态框 -->
<div class="modal fade" id="wechatModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fab fa-weixin text-success me-2"></i>微信扫码登录
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <div id="wechatQRContainer">
                    <p>请使用微信扫描下方二维码登录：</p>
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border text-success" role="status">
                            <span class="visually-hidden">生成中...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('loginForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const loginData = {
        username: formData.get('username'),
        password: formData.get('password')
    };

    fetch('/api/auth/login', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(loginData)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.href = '/';
        } else {
            alert('登录失败: ' + data.message);
        }
    })
    .catch(error => {
        console.error('登录错误:', error);
        alert('登录失败，请稍后重试');
    });
});

function showWechatLogin() {
    const modal = new bootstrap.Modal(document.getElementById('wechatModal'));
    modal.show();
    
    // 获取微信登录二维码
    fetch('/api/auth/wechat-qr')
        .then(response => response.json())
        .then(data => {
            if (data.qrCode) {
                document.getElementById('wechatQRContainer').innerHTML = `
                    <p>请使用微信扫描下方二维码登录：</p>
                    <img src="${data.qrCode}" alt="微信登录二维码" class="img-fluid" style="max-width: 250px;">
                    <p class="text-muted mt-3 small">扫码后请在微信中确认登录</p>
                `;
            }
        })
        .catch(error => {
            console.error('获取微信二维码失败:', error);
            document.getElementById('wechatQRContainer').innerHTML = `
                <p class="text-danger">生成二维码失败，请稍后重试</p>
            `;
        });
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 